<h1> Sign Up </h1>
<%= form_with model: @user, url: sign_up_path, data: { turbo: false} do |form| %>
    <% if @user.errors.any? %>
        <div class="alert alert-danger">
            <% @user.errors.full_messages do |message| %>
                <div> <%= message %> </div>
            <% end %>
        </div>
    <% end %>
    <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.text_field :email, class: "form-control", id: "exampleFormControlInput1", placeholder: "steve@apple.com" %>
    </div>
    <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control", id: "exampleFormControlInput2", placeholder: "password" %>
    </div>
    <div class="mb-3">
        <%= form.label :password_confirmation, class: "form-label" %>
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: "confirm password" %>
    </div>

    <%= form.submit "Sign Up", class:"btn" %>
<% end %>